{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": ["./**/*.ts", "../shared/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
